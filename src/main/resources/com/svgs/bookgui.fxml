<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="550" prefWidth="600" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.svgs.BookController">

    <!-- TableView for Books -->
    <TableView fx:id="bookTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="titleCol" prefWidth="200" text="Title" />
            <TableColumn fx:id="authorCol" prefWidth="150" text="Author" />
            <TableColumn fx:id="yearCol" prefWidth="80" text="Year" />
            <TableColumn fx:id="genreCol" prefWidth="120" text="Genre" />
            <TableColumn fx:id="ratingCol" prefWidth="80" text="Rating" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>

    <!-- Input fields -->
    <TextField fx:id="titleField" promptText="Book Title" />
    <TextField fx:id="authorField" promptText="Author" />
    <TextField fx:id="yearField" promptText="Year (e.g., 2023)" />

    <ComboBox fx:id="genreBox" promptText="Select Genre" />

    <!-- Rating input -->
    <HBox alignment="CENTER" spacing="5">
        <Label text="Rating:" />
        <RadioButton fx:id="rating1" text="★">
         <toggleGroup>
            <ToggleGroup fx:id="ratingGroup" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="rating2" text="★★" toggleGroup="$ratingGroup" />
        <RadioButton fx:id="rating3" text="★★★" toggleGroup="$ratingGroup" />
        <RadioButton fx:id="rating4" text="★★★★" toggleGroup="$ratingGroup" />
        <RadioButton fx:id="rating5" text="★★★★★" toggleGroup="$ratingGroup" />
    </HBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="addBookButton" onAction="#handleAddBook" text="Add Book" />
        <Button fx:id="deleteBookButton" onAction="#handleDeleteBook" text="Delete Selected" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
